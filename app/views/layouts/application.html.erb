<!DOCTYPE html>
<html>
  <head>
    <title>SpreedlyAirlines</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="py-4">

        <% flash.each do |name, msg| -%>
          <%= content_tag :div, msg, class: flash_classes(name) %>
        <% end -%>

        <%= yield %>
      </div>
    </div>
  </body>
</html>
